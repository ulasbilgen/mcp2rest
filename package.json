{
  "name": "mcp2rest",
  "version": "0.2.0",
  "description": "A standalone Node.js daemon that manages multiple MCP servers and exposes their tools via REST API",
  "main": "dist/index.js",
  "bin": {
    "mcp2rest": "dist/bin/mcp2rest.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/bin/mcp2rest.js start",
    "dev": "ts-node src/bin/mcp2rest.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "gateway",
    "rest-api",
    "daemon",
    "http",
    "tools",
    "automation",
    "browser-automation",
    "filesystem"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ulasbilgen/mcp2rest.git"
  },
  "bugs": {
    "url": "https://github.com/ulasbilgen/mcp2rest/issues"
  },
  "homepage": "https://github.com/ulasbilgen/mcp2rest#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "ecosystem.config.js",
    "config.example.yaml"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "js-yaml": "^4.1.0",
    "commander": "^11.1.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  }
}
